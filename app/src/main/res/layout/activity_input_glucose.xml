<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/input_background"
        tools:context=".InputGlucoseActivity">

    <EditText
            android:id="@+id/glucose_value_et"
            android:layout_width="199dp"
            android:layout_height="61dp"
            android:layout_marginTop="280dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:textColorHighlight="#3a95a6"
            android:textColorLink="#3a95a6"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/save_glucose_value_btn"
            android:layout_width="236dp"
            android:layout_height="74dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/main_button"
            android:text="Сохранить"
            android:textColor="#E4F2E7"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/glucose_value_et" />
</androidx.constraintlayout.widget.ConstraintLayout>