<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelectChartsType">

    <TextView
            android:id="@+id/textView4"
            android:layout_width="305dp"
            android:layout_height="107dp"
            android:layout_marginTop="36dp"
            android:text="Сформировать график"
            android:textAlignment="center"
            android:textSize="42sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/last_day_btn"
            android:layout_width="202dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:text="За последние сутки"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
            android:id="@+id/last_week_btn"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="За последнюю неделю"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_day_btn" />

    <Button
            android:id="@+id/last_month_btn"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="За последний месяц"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_week_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>